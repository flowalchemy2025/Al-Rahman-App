{
  "expo": {
    "name": "alR HUB",
    "slug": "restaurant-purchase-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#C62828"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.restaurant.purchaseapp",
      "infoPlist": {
        "NSCameraUsageDescription": "This app requires camera access to take photos of purchased items.",
        "NSPhotoLibraryUsageDescription": "This app requires photo library access to upload item images.",
        "NSPhotoLibraryAddUsageDescription": "This app requires permission to save photos to your library.",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#C62828"
      },
      "package": "com.restaurant.purchaseapp",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.RECORD_AUDIO"
      ],
      "versionCode": 2
    },
    "web": {
      "name": "alR HUB",
      "shortName": "IH",
      "favicon": "./assets/icon.png"
    },
    "plugins": [
      [
        "expo-image-picker",
        {
          "photosPermission": "This app requires photo library access to upload item images.",
          "cameraPermission": "This app requires camera access to take photos of purchased items."
        }
      ],
      "expo-font",
      "expo-asset"
    ]
  }
}